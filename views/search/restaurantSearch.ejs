<div class="col-lg-7 col-md-7 col-sm-8 col-xs-12">
    <div class="row">
        <div class="col-lg-10 col-xs-8">
            <div class="btn-group btn-group-justified" role="group">
                <div class="btn-group" role="group">
                    <button data-ng-click="filterRestaurant('name')" type="button" class="btn filter-effect btn-edit btn-default-edit">Name</button>
                </div>
                <div class="btn-group" role="group">
                    <button data-ng-click="filterRestaurant('price')" type="button" class="btn filter-effect btn-edit btn-default-edit">Price</button>
                </div>
                <div class="btn-group" role="group">
                    <button data-ng-click="filterRestaurant('ratings')" type="button" class="btn filter-effect btn-edit btn-default-edit">Rating</button>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-xs-4">
            <button type="button" style="float:right" class="togg-search btn-edit btn-default-edit"><i style="margin-right:5px" class="fa fa-search"></i>Search</button>
        </div>
        
        <!-- SEARCH RESULTS -->
        <div class="col-lg-12 col-xs-12">
            <!-- <br><br> -->
            <div id="seller">
                <div class='cat-box col-lg-12' data-ng-repeat="restaurant in restaurantsData">
                    <div class='img-circle avatarex'>
                        <img class='img-circle category-item-descex' height='100%' width='100%' ng-src='{{ restaurant.imgsrc }}'>
                    </div>

                    <!-- Display whether high ratings or new -->
                    <article>
                        <div class='ribbon {{ restaurant.misc.ribbonClass }}'>
                        </div>
                        

                        <!-- Restaurant's likes ,visit and favorites -->
                        <div id='ff-sel-love'>
                            <span data-ng-click="updatevalue(restaurant.vendorunkid,'1','1')" class='btn btn-default btn-sm' title='Like' data-placement='top' data-toggle='tooltip'>
                                <i class='fa fa-thumbs-up fa-white like-ico-{{ restaurant.vendorunkid }}'></i>
                                <span id='vendor-like-{{ restaurant.vendorunkid }}'>{{ restaurant.likes }}</span>
                            </span>
                            <span data-ng-click="updatevalue(restaurant.vendorunkid,'3','1')" class='btn btn-default btn-sm' title='Favourite' data-placement='top' data-toggle='tooltip'>
                                <i class='fa fa-star fa-white favourite-ico-{{ restaurant.vendorunkid }}'></i> 
                                <span id='vendor-favourite-{{ restaurant.vendorunkid }}'>{{ restaurant.favorites }}</span>
                            </span>
                            <span data-ng-click="updatevalue(restaurant.vendorunkid,'4','1')" class='btn btn-default btn-sm' title='Visit' data-placement='top' data-toggle='tooltip'>
                                <i class='fa fa-map-marker fa-lg visit-ico-{{ restaurant.vendorunkid }}'></i>
                                <span id='vendor-visit-{{ restaurant.vendorunkid }}'>{{ restaurant.visits }}</span>
                            </span>
                        </div>
                        

                        <a href='/vendor/{{ restaurant.city | lowercase }}/{{ restaurant.vendor_url | lowercase }}' class='btn-red order-btn {{ restaurant.misc.orderNowButtonClass }}'>Order Now</a>
                        <div class='container-fluid'>
                            <div class='row'>
                                <div class='col-lg-8 col-md-8 col-sm-7'>
                                    <h6>{{ restaurant.vendor_name | capitalize}}</h6>
                                    <ul ng-bind-html="restaurant.misc.ratingsSymbol" class='rate stars hidden-xs' data-toggle='tooltip' title='Ratings' data-placement='top'>
                                    </ul>
                                </div>
                                
                                <div data-ng-if="restaurant.ratings < 4.7 && restaurant.born > 31" class='col-lg-4 col-md-4 col-sm-5 hidden-xs' style='padding: 0px'>
                                    <div class='btn btn-default' style='float:right; min-height:38px; padding:0 0 0 10px; border-width:1px 1px 3px; max-width:100%; overflow: hidden'>
                                        <span data-ng-if="restaurant.votes == 0" style='float:left; margin-right:5px; margin-top:5px'>
                                            <span style='font-weight:bold; font-size:15px'>No Ratings Yet</span>
                                        </span>
                                        <span data-ng-if="restaurant.votes != 0" style='float:left; margin-right:5px'>
                                            <span style='font-weight:bold; font-size:15px'>{{ restaurant.misc.restaurantType }}</span>
                                            <span style='font-size:9px; display:block'>{{ restaurant.votes }} User Votes</span>
                                        </span>
                                        <span data-ng-if="restaurant.votes != 0" class='btn btn-green' style='background:"+ backcolor +" ;border-bottom:solid "+ border +"; font-size:18px; padding: 4px 7px'>{{ restaurant.ratings }}</span>
                                    </div>
                                </div>                            
                            </div>
                        </div>
                        
                        <div class='sell-details mob visible-xs' style='width:64%'>
                            <ul ng-bind-html="restaurant.misc.ratingsSymbol"  class='rate stars' style='display:inline-block; margin-right:20px' data-toggle='tooltip' title='Ratings' data-placement='top'>
                            </ul>
                            <div data-ng-if="restaurant.ratings < 4.7 && restaurant.born > 31" class='btn btn-default' style='padding:0 0 0 10px; min-height: 38px; border-width:1px 1px 3px;'>
                                <span data-ng-if="restaurant.votes == 0" style='float:left; margin-right:5px; margin-top: 5px'>
                                    <span style='font-weight:bold; font-size:15px;'>No Ratings Yet</span>
                                </span>
                                <span data-ng-if="restaurant.votes != 0" style='float:left; margin-right:5px'>
                                    <span style='font-weight:bold; font-size:15px'>{{ restaurant.misc.restaurantType }}</span>
                                    <span style='font-size:9px; display:block'>{{ restaurant.votes }} User Votes</span>
                                </span>
                                <span data-ng-if="restaurant.votes != 0" class='btn btn-green' style='background:"+ backcolor +" ;border-bottom:solid "+ border +"; font-size:18px; padding: 4px 7px'>{{ restaurant.ratings }}</span>
                            </div>
                        </div>
                        <br>
                        <div class='sell-details mob' style='margin-bottom: 8px; width:64%'>
                            <div style='display: inline-table'><i class='tooli fa fa-map-marker fa-lg' data-toggle='tooltip' title='Area Location' data-placement='top'></i><span style='font-color: #a0a0a0; margin: 0 9px 0 5px; font-size:13px'>{{ restaurant.area | capitalize }}, {{ restaurant.city | capitalize }}</span>
                                <div style='display: inline-table'><i class='tooli fa fa-clock-o fa-lg' data-toggle='tooltip' data-placement='top' title='Average Cooking Time'></i><span style='font-color: #a0a0a0; margin-left: 5px; font-size:13px'>{{ restaurant.del_time | capitalize }} Minutes</span>
                                </div>
                                <div class='sell-details mob' style='line-height: 25px'>
                                    <div data-ng-if="restaurant.speciality != null || restaurant.speciality != ''" style='display: inline-table'><i class='fa fa-asterisk fa-lg' data-toggle='tooltip' title='Speciality' data-placement='top'></i><span style='font-color: #a0a0a0; margin: 0 9px 0 5px; font-size:13px'>{{ restaurant.speciality | capitalize }}</span>
                                    </div>
                                    <div style='display: inline-table'>
                                        <i data-ng-if="restaurant.veg == 1 || restaurant.jain == 1 || restaurant.swaminarayan == 1 || restaurant.non_veg == 1" class='fa fa-cutlery fa-lg' style='margin-right: 5px;' data-toggle='tooltip' title='Food Diet' data-placement='top'></i>
                                        <img data-ng-if="restaurant.veg == 1" src='/images/assets/vegetarian-20x20.png' data-toggle='tooltip' title='Vegetarian' data-placement='top' class='img-responsive'>
                                        <img data-ng-if="restaurant.jain == 1" src='/images/assets/jain-20x20.png' data-toggle='tooltip' title='Jain' data-placement='top' class='img-responsive'>
                                        <img data-ng-if="restaurant.swaminarayan == 1" src='/images/assets/swaminarayan-20x20.png' data-toggle='tooltip' title='Swaminarayan' data-placement='top' class='img-responsive'>
                                        <img data-ng-if="restaurant.non_veg == 1" src='/images/assets/non-vegetarian-20x20.png' data-toggle='tooltip' title='Non Vegetarian' data-placement='top' class='img-responsive'>           
                                    </div>
                                    <span style='margin-left: 9px; display: inline-table' title='Price Range' data-placement='top' data-toggle='tooltip'>
                                        <p ng-bind-html="restaurant.misc.priceSymbol"></p>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>  
    </div>
</div>